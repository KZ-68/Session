{% extends 'base.html.twig' %}

{% block title %}Détail d'une matiere{% endblock %}

{% block body %}
    <h1>Détail d'un programme</h1>
    
    <table class="table table-striped">
        <thead>
            <th>Module</th>
            <th>Nb jours</th>
        </thead>
        <tbody>
        <tr>
            <td>{{programme.matiere.categorie.titre}}</td>
        </tr>
        <tr>
            <td><a href="{{ path('show_categorie', {'id': programme.matiere.id}) }}" aria-label="Categorie Details">{{ programme.matiere.denomination }}</a></td>
            <td>{{ programme.duree }} jours</td>
        </tr>
        </tbody>
    </table>
    
{% endblock %}