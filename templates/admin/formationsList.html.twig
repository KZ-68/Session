{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}
    <h1>Liste des formations</h1>

    <a href="{{ path('new_formation') }}" class="btn btn-success">Ajouter une formation</a><br/>
    {% for formation in formations %}
        <p>
            <a href="{{ path('show_formation', {'id': formation.id}) }}">{{ formation.intituleFormation }}</a>
            <a class="btn btn-warning" href="{{ path('edit_formation', {'id': formation.id}) }}">Edit</a>
            <a class="btn btn-danger" href="{{ path('delete_formation', {'id': formation.id}) }}">Supp</a><br/>
        </p>
        
    {% endfor %}
    
{% endblock %}